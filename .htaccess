RewriteEngine On

# 1. Si l'URL contient déjà /public, ne rien faire
RewriteCond %{REQUEST_URI} ^/kit-services/public
RewriteRule ^ - [L]

# 2. Si l'utilisateur ouvre seulement /kit-services/, charger Laravel
RewriteRule ^kit-services/?$ /kit-services/public/index.php [L]

# 3. Pour toutes les autres URLs, rediriger vers /public sans changer l'URL visible
RewriteCond %{REQUEST_URI} !^/kit-services/public
RewriteRule ^kit-services/(.*)$ /kit-services/public/$1 [L,QSA]
